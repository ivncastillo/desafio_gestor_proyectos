
<h1>Formulario de Ingreso Proyectos</h1>

<form method="get" action="/pages/create">
    
    <div class="form-group">
        <label for="name">Nombre</label>
        <input name="name"  class="form-control" placeholder="Ingresa nombre proyecto">
    </div>

    <div class="form-group">
        <label for="descripcion">Descripción</label>
        <input name="descripcion"  class="form-control" placeholder="Ingresa breve descripción">
    </div>

    

    <div class="form-group">
        <label for="start_date" class="col-2 col-form-label" >Fecha inicio</label>
        <div class="col-10">
            <input name="start_date" class="form-control" type="date" id="start_date" > 
        </div>
    </div>

    <div class="form-group">
        <label for="end_date" class="col-2 col-form-label" >Fecha termino</label>
        <div class="col-10">
            <input name="end_date" class="form-control" type="date" id="end_date" > 
        </div>
    </div>

    <div class="form-group">
    <label for="state">Estado proyecto</label>
    <select input name="state" class="form-control" id="state">
      <option>Propuesta</option>
      <option>En progreso</option>
      <option>Terminado</option>
    </select>
  </div>

    <button type="submit" class="btn btn-primary">Crear proyecto</button>
</form>
